{
  "name": "tdah-dev-helper",
  "displayName": "TDAH Dev Helper",
  "description": "Extensão para ajudar desenvolvedores com TDAH a aumentar sua produtividade",
  "version": "0.0.1",
  "publisher": "tdah-dev-helper",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/tdah-dev-helper"
  },
  "engines": {
    "vscode": "^1.60.0",
    "cursor": "*"
  },
  "categories": [
    "Other",
    "Themes",
    "Productivity"
  ],
  "keywords": [
    "tdah",
    "adhd",
    "productivity",
    "focus",
    "task-management",
    "gamification",
    "accessibility"
  ],
  "activationEvents": [
    "onCommand:tdah-dev-helper.startFocus",
    "onCommand:tdah-dev-helper.stopFocus",
    "onCommand:tdah-dev-helper.showDashboard",
    "onCommand:tdah-dev-helper.selectTask",
    "onCommand:tdah-dev-helper.decomposeTask",
    "onCommand:tdah-dev-helper.showBlockedNotifications",
    "onCommand:tdah-dev-helper.showProfile",
    "onCommand:tdah-dev-helper.changeTheme",
    "onCommand:tdah-dev-helper.createTask"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tdah-dev-helper.startFocus",
        "title": "TDAH: Iniciar Modo Hiperfoco",
        "category": "TDAH Dev Helper"
      },
      {
        "command": "tdah-dev-helper.stopFocus",
        "title": "TDAH: Parar Modo Hiperfoco",
        "category": "TDAH Dev Helper"
      },
      {
        "command": "tdah-dev-helper.showDashboard",
        "title": "TDAH: Mostrar Dashboard",
        "category": "TDAH Dev Helper"
      },
      {
        "command": "tdah-dev-helper.selectTask",
        "title": "TDAH: Selecionar Tarefa",
        "category": "TDAH Dev Helper"
      },
      {
        "command": "tdah-dev-helper.decomposeTask",
        "title": "TDAH: Decompor Tarefa",
        "category": "TDAH Dev Helper"
      },
      {
        "command": "tdah-dev-helper.showBlockedNotifications",
        "title": "TDAH: Mostrar Notificações Bloqueadas",
        "category": "TDAH Dev Helper"
      },
      {
        "command": "tdah-dev-helper.showProfile",
        "title": "TDAH: Mostrar Perfil",
        "category": "TDAH Dev Helper"
      },
      {
        "command": "tdah-dev-helper.changeTheme",
        "title": "TDAH: Mudar Tema",
        "category": "TDAH Dev Helper"
      },
      {
        "command": "tdah-dev-helper.createTask",
        "title": "TDAH: Criar Nova Tarefa",
        "category": "TDAH Dev Helper"
      }
    ],
    "themes": [
      {
        "label": "TDAH Focus Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/tdah-dark.json"
      },
      {
        "label": "TDAH Focus Light",
        "uiTheme": "vs",
        "path": "./themes/tdah-light.json"
      },
      {
        "label": "TDAH Focus High Contrast",
        "uiTheme": "hc-black",
        "path": "./themes/tdah-high-contrast.json"
      }
    ],
    "configuration": {
      "title": "TDAH Dev Helper",
      "properties": {
        "tdahDevHelper.theme": {
          "type": "string",
          "enum": [
            "tdah-light",
            "tdah-dark",
            "tdah-high-contrast"
          ],
          "default": "tdah-light",
          "description": "Tema otimizado para desenvolvedores com TDAH"
        },
        "tdahDevHelper.apiUrl": {
          "type": "string",
          "default": "",
          "description": "URL da API do TDAH Dev Helper (opcional)"
        },
        "tdahDevHelper.notificationBlocking": {
          "type": "boolean",
          "default": true,
          "description": "Ativar bloqueio de notificações durante o modo hiperfoco"
        },
        "tdahDevHelper.gamification": {
          "type": "boolean",
          "default": false,
          "description": "Ativar sistema de gamificação"
        },
        "tdahDevHelper.debug": {
          "type": "boolean",
          "default": true,
          "description": "Ativar modo debug para ver logs detalhados"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint \"src/**/*.ts\" --ext .ts",
    "test": "node ./out/test/runTest.js",
    "clean": "rimraf dist out",
    "build": "npm run compile",
    "dev": "npm run clean && npm run watch",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.24",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "mocha": "^10.3.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/sanitize-html": "^2.16.0",
    "axios": "^1.6.7",
    "sanitize-html": "^2.17.0"
  }
}
