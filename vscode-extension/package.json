{
  "name": "dev-helper",
  "displayName": "Dev Helper",
  "description": "Extensão para ajudar desenvolvedores a aumentar sua produtividade e manter o foco",
  "version": "0.0.1",
  "publisher": "dev-helper",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/dev-helper"
  },
  "engines": {
    "vscode": "^1.60.0",
    "cursor": "*"
  },
  "categories": [
    "Other",
    "Themes"
  ],
  "keywords": [
    "productivity",
    "focus",
    "task-management",
    "gamification",
    "accessibility"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dev-helper.startFocus",
        "title": "Dev Helper: Iniciar Modo Hiperfoco",
        "category": "Dev Helper"
      },
      {
        "command": "dev-helper.stopFocus",
        "title": "Dev Helper: Parar Modo Hiperfoco",
        "category": "Dev Helper"
      },
      {
        "command": "dev-helper.showDashboard",
        "title": "Dev Helper: Mostrar Dashboard",
        "category": "Dev Helper"
      },
      {
        "command": "dev-helper.createTask",
        "title": "Dev Helper: Criar Tarefa",
        "category": "Dev Helper"
      },
      {
        "command": "dev-helper.decomposeTask",
        "title": "Dev Helper: Decompor Tarefa",
        "category": "Dev Helper"
      },
      {
        "command": "dev-helper.showBlockedNotifications",
        "title": "Dev Helper: Mostrar Notificações Bloqueadas",
        "category": "Dev Helper"
      }
    ],
    "keybindings": [
      {
        "command": "dev-helper.startFocus",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h",
        "when": "editorTextFocus"
      },
      {
        "command": "dev-helper.stopFocus",
        "key": "ctrl+shift+j",
        "mac": "cmd+shift+j",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dev-helper-sidebar",
          "title": "Dev Helper",
          "icon": "media/dashboard.svg"
        }
      ]
    },
    "views": {
      "dev-helper-sidebar": [
        {
          "id": "dev-helper.dashboard",
          "name": "Dashboard",
          "type": "webview",
          "initialSize": 500
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "dev-helper.dashboard",
        "contents": "Bem-vindo ao Dashboard do Dev Helper!\n\n[Iniciar Modo Hiperfoco](command:dev-helper.startFocus)\n[Criar Nova Tarefa](command:dev-helper.createTask)\n[Decompor Tarefa](command:dev-helper.decomposeTask)\n[Mostrar Notificações Bloqueadas](command:dev-helper.showBlockedNotifications)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "dev-helper.createTask",
          "group": "dev-helper@1",
          "when": "editorTextFocus"
        },
        {
          "command": "dev-helper.decomposeTask",
          "group": "dev-helper@1",
          "when": "editorTextFocus"
        }
      ],
      "view/title": [
        {
          "command": "dev-helper.showDashboard",
          "group": "navigation",
          "when": "view == dev-helper.dashboard"
        }
      ]
    },
    "themes": [
      {
        "label": "TDAH Focus Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/tdah-dark.json"
      },
      {
        "label": "TDAH Focus Light",
        "uiTheme": "vs",
        "path": "./themes/tdah-light.json"
      },
      {
        "label": "TDAH Focus High Contrast",
        "uiTheme": "hc-black",
        "path": "./themes/tdah-high-contrast.json"
      }
    ],
    "configuration": {
      "title": "Dev Helper",
      "properties": {
        "devHelper.theme": {
          "type": "string",
          "enum": [
            "dev-helper-light",
            "dev-helper-dark",
            "dev-helper-high-contrast"
          ],
          "default": "dev-helper-light",
          "description": "Tema otimizado para desenvolvedores"
        },
        "devHelper.apiUrl": {
          "type": "string",
          "default": "",
          "description": "URL da API do Dev Helper (opcional)"
        },
        "devHelper.notificationBlocking": {
          "type": "boolean",
          "default": true,
          "description": "Ativar bloqueio de notificações durante o modo hiperfoco"
        },
        "devHelper.gamification": {
          "type": "boolean",
          "default": false,
          "description": "Ativar sistema de gamificação"
        },
        "devHelper.debug": {
          "type": "boolean",
          "default": true,
          "description": "Ativar modo debug para ver logs detalhados"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint \"src/**/*.ts\" --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist out",
    "build": "npm run compile",
    "dev": "npm run clean && npm run watch"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.24",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vscode/test-electron": "^2.3.8",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "mocha": "^10.3.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/sanitize-html": "^2.16.0",
    "axios": "^1.6.7",
    "sanitize-html": "^2.17.0"
  }
}
